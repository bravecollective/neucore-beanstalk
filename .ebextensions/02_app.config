packages:
  yum:
    php-gmp: []
    php-pecl-apcu: []

option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    document_root: /web

files:
  "/etc/php.d/app.ini" :
    mode: "000644"
    owner: root
    group: root
    content: |
      error_log = /var/app/shared/logs
  "/etc/cron.d/app-run-jobs":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 0,2,6,8,10,14,16,18,22 * * * webapp source /opt/elasticbeanstalk/deployment/custom_env_var && /usr/bin/flock -n /var/app/shared/run-jobs2.lock /var/app/current/backend/bin/run-jobs2.sh
      0 4,12,20 * * * webapp source /opt/elasticbeanstalk/deployment/custom_env_var && /usr/bin/flock -n /var/app/shared/run-jobs.lock /var/app/current/backend/bin/run-jobs.sh
    leader_only: true

commands:
  clear_cron_backup:
    command: rm -f /etc/cron.d/app-run-jobs.bak
    ignoreErrors: true
